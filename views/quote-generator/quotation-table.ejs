<!DOCTYPE html>
<%- include('../template/header', {title:title}) %>
<body>
    <%- include('../nav/nav', {title: title}) %>
    <div class="container">
        <div class="row m-2 p-0">
            <div class="col-6">
                <a class="btn btn-success" href="/cotizador/nueva-cotizacion"><b>+</b> Agregar</a>
            </div>
            <div class="col-6">
                <h1 class="h2 text-end m-0 mx-3 p-0"><%= title %></h1>
            </div>
        </div>

        <div class="card shadow p-2">
            <div class="table-responsive">
                <table class="table table-hover table-bordered m-0 p-0">
                    <thead class="bg-light text-center">
                        <tr>
                            <th style="width: 8%;">Nro Cotizacion</th>
                            <th>Monto</th>
                            <th>Dirección</th>
                            <th>Status</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>                    
                        <%quoters.forEach (quoter =>{ %>                        
                            <tr>
                                <td class="text-center my-auto" style="width: 13%;">c-<%= quoter.quoterNumber %> </td>
                                <td>00.000</td>                                
                                <td>
                                    <div>
                                        <i class="fa-solid fa-location-dot" style="font-size: 0.8rem;"></i> <%= quoter.quoterOrigin %>
                                    </div>
                                    <div>
                                        <i class="fa-solid fa-location-dot" style="font-size: 0.8rem;"></i> <%= quoter.quoterDestination %>
                                    </div>
                                </td>    
                                <td>Pendiente</td>  
                                <td class="text-center">
                                    <!-- view -->
                                    <a class="btn text-success" href="/cotizador/view/<%= quoter.quoterID %>" title="ver Cotización"><i class="fa-solid fa-eye"></i></a>
                                </td> 
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>  
</body>
</html>